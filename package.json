{
  "name": "pureleap-home",
  "private": true,
  "license": "",
  "author": "",
  "sideEffects": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "yarn workspaces foreach -W run clean",
    "clean-terraform": "yarn workspaces foreach -W run clean-terraform",
    "compile": "yarn fix-project-references-all && tsc --build",
    "coverage": "yarn workspaces foreach --topological-devs --worktree run coverage",
    "deploy": "yarn workspaces foreach -W run deploy \"$@\"",
    "fix-project-references": "utils-typescript-references --skipRoot",
    "fix-project-references-all": "utils-typescript-references",
    "format": "biome format --write --json-formatter-enabled=false",
    "format-check": "biome format --json-formatter-enabled=false",
    "infra": "yarn workspaces foreach -W run infra \"$@\"",
    "lint": "biome lint",
    "lint-fix": "biome lint --write",
    "package:doctor": "yarn dlx @yarnpkg/doctor .",
    "test": "yarn workspaces foreach -Wv run test",
    "test-watch": "nodemonx --watch . --exec 'yarn test'"
  },
  "resolutions": {
    "generic-names": "4.0.0",
    "ansi-regex": ">=5.0.1",
    "braces": ">=3.0.3",
    "glob": ">=10.5.0",
    "ip": "^2.0.1",
    "path-to-regexp": ">=0.1.12",
    "preact": ">=10.27.3",
    "prismjs": ">=1.29.0",
    "qs": ">=6.14.1",
    "semver": ">=7.5.2",
    "@babel/core/semver": ">=7.5.2",
    "trim": ">=0.0.3",
    "strip-ansi": ">=6.0.1",
    "chokidar": ">=3.6.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@goldstack/nodemonx": "0.4.26",
    "@goldstack/utils-typescript-references": "0.3.16",
    "@types/jest": "^29.5.14",
    "@types/node": "^25.0.3",
    "nodemon": "^3.1.11",
    "react": "^19",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@4.9.2"
}
